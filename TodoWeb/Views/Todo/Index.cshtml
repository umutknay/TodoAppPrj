
@{
    ViewData["Title"] = "Index";
}
@model List<Todo>

    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Görevler</h5>

                    <a asp-controller="Todo" asp-action="Create" class="btn btn-primary mb-3">Yeni</a>
                    @if (Model.Any())
            {
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Id</th>
                                    <th>Görev</th>
                                    <th>Açıklama</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                  @foreach(var item in Model)
                        {
                                <tr>
                                    <td></td>
                                    <td>@item.Id</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a asp-controller="Todo" asp-action="Select" asp-route-id="@item.Id" class="btn btn-success btn-sm">Seç</a>
                                    </td>
                                </tr>

                        }
                            </tbody>
                        </table>
            }

                </div>

            </div>
        </div>
    </div>

